<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../views/head'); %>
</head>
<body>

<header>
    <%- include('../views/header'); %>
</header>

<main>
    <div class="products">
        <% for(var i = 0; i< data.length; i++) { %>
            <div class="card">
            

                <img src="<%= data[i].filename%>" >
                <h1><%= data[i].name%></h1>
                <p class="price"><%= data[i].price%></p>
                <p><%= data[i].description%></p>
                <p><button>Add to Cart</button></p>
            </div>
        <% } %>
       
        
        


    </div>
</main>

<footer>
    <%- include('../views/footer'); %>
</footer>

</body>
</html>